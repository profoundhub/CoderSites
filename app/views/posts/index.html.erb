<div class="container-fluid">

  <header>
    <div class="jumbotron">
      <div class="page-header">
        <h1 class="lead text-center">CampSites Directory</h1>
        <h3 class="text-center">(FCC Project Hall of Fame)</h3>
        <h6 class="text-center">Feel free to add your completed FreeCodeCamp Projects below:</h6>
      </div>
    </div>
  </header>

  <div class="jumbotron">
    <section>
      <article>
        <div class="row tableBackground">

          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead class="thead-inverse">
                <tr>
                  <th scope="row">Title</th>
                  <th scope="row">Category</th>
                  <th scope="row">Author</th>
                </tr>
              </thead>
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td>  <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <a href="<%= post.url %>" targer="_blank" rel="muse nofollow external"><%= post.title %></a></td>
                    <td><%= post.description %></td>
                    <td><a href="https://www.freecodecamp.com/<%= post.author %>" rel="muse nofollow external"><%= post.author %></a></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div><!-- div table-responsive -->

        <br />

          <p>
            <div align="center">
              <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- campsites -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2490173776997871"
                     data-ad-slot="5828971648"
                     data-ad-format="auto">
                </ins>
              <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
              </script>
            </div>
          </p>

          <aside>
            <div class="row">
              <div class="col-md-2 col-md-offset-5">
                  <%= link_to 'Add New CampSite', new_post_path, class: 'btn btn-primary bubbleWrap' %>
                <br>
              </div>
            </div>
          </aside>

        <br />

        </div><!-- div row tableBackground -->
      </article><!-- article -->
    <section><!-- section -->
  </div>
</div><!-- container-fluid -->
