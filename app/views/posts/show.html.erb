<div class="jumbotron">
  <h1>Details</h1>
  
  <p id="notice"><%= notice %></p>
  
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>
  
  <p>
    <strong>Description:</strong>
    <%= @post.body %>
  </p>
  
  <p>
    <strong>Author:</strong>
    <%= @post.author %>
  </p>
  
  <p>
    <strong>Site URL:</strong>
    <%= @post.URL %>
  </p>
  
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>